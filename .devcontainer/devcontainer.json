{
  "name": "deskHPSDR MinGW Cross-Compilation",
  "build": {
    "dockerfile": "Dockerfile",
    "options": [
      "--network=host"
    ]
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "twxs.cmake",
        "anthropic.claude-code"
      ],
      "settings": {
        "cmake.configureSettings": {
          "CMAKE_TOOLCHAIN_FILE": "/opt/mingw-toolchain.cmake"
        },
        "cmake.generator": "Unix Makefiles"
      }
    }
  },
  "remoteUser": "root",
  "postCreateCommand": "echo 'MinGW devcontainer pronto! Usa: mkdir build && cd build && cmake -DCMAKE_TOOLCHAIN_FILE=/opt/mingw-toolchain.cmake .. && make'",
  "mounts": [
    "source=${localEnv:HOME}/.claude,target=/root/.claude,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.claude.json,target=/root/.claude.json,type=bind,consistency=cached"
  ]
}
